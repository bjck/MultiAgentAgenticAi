<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="20260220-03-1" author="codex">
        <createTable tableName="tool_call_log">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="session_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_tool_call_session" referencedTableName="orchestration_session" referencedColumnNames="id" deleteCascade="true"/>
            </column>
            <column name="task_log_id" type="UUID">
                <constraints foreignKeyName="fk_tool_call_task" referencedTableName="task_log" referencedColumnNames="id" deleteCascade="true"/>
            </column>
            <column name="role" type="VARCHAR(50)"/>
            <column name="tool_name" type="VARCHAR(120)">
                <constraints nullable="false"/>
            </column>
            <column name="tool_input" type="TEXT"/>
            <column name="tool_output" type="TEXT"/>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="tool_call_log" indexName="ix_tool_call_session">
            <column name="session_id"/>
        </createIndex>
        <createIndex tableName="tool_call_log" indexName="ix_tool_call_task">
            <column name="task_log_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
